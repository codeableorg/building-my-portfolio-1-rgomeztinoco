@import "./components/globals.styl"
@import "./components/header.styl"
@import "./components/cta.styl"

.proyects
  section-container()
  align-items: center
  gap: 48px
  &__header
    display: flex
    flex-direction: column
    align-items: center
    gap: 0.8rem
  &__container
    position: relative
    margin: auto
    display: grid
    grid-template-columns: repeat(auto-fit, minmax(275px, 1fr))
    gap: 48px
.proyect
  display: flex
  flex-wrap: wrap
  gap: 1.6rem
  background-color: var(--gray-400)
  border-radius: 1rem
  overflow: hidden
  &__img
    width: 100%
    object-fit: cover
  &__content
    margin: 2rem
    display: flex
    flex-direction: column
    justify-content: center
    gap: 1.6rem
  &__technologies
    padding: 10px
    display: flex
    gap: 25px
    background-color: var(--gray-500)
    border-radius: 10px
  &__technology
    height: 25px
    width: 25px
  &__link
    text-transform: uppercase
    font-weight: 500
    letter-spacing: 0.1em
    @extend .content--sm
