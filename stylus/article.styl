@import "./components/globals.styl"
@import "./components/header.styl"
@import "./components/cta.styl"

.article
  max-width: 760px
  display: flex
  flex-direction: column
  gap: 16px
  &__date
    text-transform: uppercase
  &__picture
    margin: 0 auto
    &__img
      width: 100%
      max-width: 640px
    &__caption
      margin-top: 0.8rem
      text-align: center
      color: var(--gray-200)
  &__list
    padding: 0 2.6rem
  &__quote
    margin: 1.6rem auto
    max-width: 64rem
    text-align: center
    color: var(--primary-300)
    font-style: italic
  &__link
    margin-top: 4.8rem
    text-align: center
    text-transform: uppercase
    font-weight: 500
