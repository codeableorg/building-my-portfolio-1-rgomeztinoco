@import "./components/globals.styl"
@import "./components/header.styl"

.input__label
  text-transform: uppercase
  letter-spacing: 0.125em

.helper-text
  color: var(--gray-200)
  opacity: 0.75

.main__section:nth-child(1)
  background-color: var(--gray-400)

.form
  section-container()
  gap: 48px
  &__heading
    text-align: center
  &__container
    display: flex
    flex-direction: column
    gap: 1.6rem
  &__item
    display: flex
    flex-direction: column
    gap: 4px
    select
      appearance: none
      content-font()
  &__input
    height: 4rem
    width: 100%
    padding: 0.8rem 1.2rem
    border-radius: 0.6rem
    border: 1px solid var(--gray-300)
    background-color: var(--gray-500)
    color: var(--gray-100)
    content-font()
    @extend .content--sm
    &:focus-visible
      outline: none
      box-shadow: 0px 0px 4px var(--primary-300)
  &__block
    display: grid
    grid-template-columns: 1fr 1fr
    gap: 1.6rem
  &__checkbox-container
    display: flex
    flex-direction: column
    gap: 1.2rem
  &__checkbox
    display: flex
    gap: 1rem
    input
      appearance: none
      min-width: 16px
      min-height: 16px
      margin: 2px
      align-self: flex-start
      border: 1px solid var(--gray-300)
      border-radius: 4px
      animation: uncheck 0.6s ease
      animation-fill-mode: forwards
      &:checked
        border: none
        background-image: url("../assets/icons/check.svg")
        background-size: 9px 9px 
        background-position: center
        background-repeat: no-repeat
        animation: check 0.75s linear
        animation-fill-mode: forwards
      &:focus-visible
        outline: 2px solid var(--primary-300)
        outline-offset: 2px

@keyframes check
  0%
    transform: scale(1)
    background-color: var(--gray-500)
  50%
    transform: scale(1.2)
    background-color: var(--primary-300)
    outline: 2px solid var(--primary-300)
    outline-offset: 2px
  100%
    transform: scale(1)
    background-color: var(--primary-300)

@keyframes uncheck
  0%
    background-color: var(--primary-300)
  100%
    background-color: var(--gray-500)


@media screen
  @media (max-width: 480px)
    .form
      &__block
        grid-template-rows: 1fr 1fr
        grid-template-columns: 1fr
