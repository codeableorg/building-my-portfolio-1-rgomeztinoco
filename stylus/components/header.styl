.header
  padding: 3.2rem 1.6rem
  padding-bottom: 0px
  margin: 0 auto
  max-width: 760px
  display: flex
  justify-content: space-between
  flex-wrap: wrap
  gap: 16px
  &__img
    height: 32px
    width: 32px
    border-radius: 50%
    margin-right: 12px
  &__item
    display: flex
    align-items: center
  &__nav
    list-style: none
    display: flex
    flex-wrap: wrap
    align-items: center
    gap: 32px