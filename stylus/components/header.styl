.header
  padding: 3.2rem 1.6rem
  margin: 0 auto
  max-width: 760px
  display: flex
  justify-content: space-between
  flex-wrap: wrap
  gap: 16px
  background-color: var(--gray-500)
  nav 
    width: 100vw
    background-color: var(--gray-500)
    display: none
  #cross
    display: none
  #menu
    height: 25px
    width: 25px
    align-self: center
  &__img
    height: 32px
    width: 32px
    border-radius: 50%
    margin-right: 12px
  &__item
    display: flex
    align-items: center
  &__nav
    list-style: none
    display: flex
    flex-direction: column
    align-items: center
    gap: 32px
  &__nav-link
    display: inline-block
    padding: 0.25rem 1rem
    border-radius: 0.25rem
    transition: background-color 0.5s
    &:hover
      background-color: var(--gray-400)
  &__nav-open
    ^[0] &
      position: absolute
      display: block
      left: 0
      top: 80px
      padding: 3.2rem 0
      padding-top: 1.6rem
    ^[1] ~ #cross
      display: block
    ^[1] ~ #menu
      display: none


@media screen
  @media (min-width: 640px)
    .header
      nav 
        display: block
        width: min-content
        margin: auto 0
      #cross
        display: none
      #menu
        display: none
      &__nav
        flex-direction: row
      &__nav-open
        ^[0] &
          position: static
          padding: 0
