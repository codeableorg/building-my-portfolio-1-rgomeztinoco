content-font()
  font-family: var(--font-content)
  font-weight: 400
title-font()
  font-family: var(--font-titles)
  font-weight: 600
section-container()
  max-width: 760px
  display: flex
  flex-direction: column

:root
  --primary-500: #d44a78
  --primary-400: #E76A94
  --primary-300: #F490B1
  --primary-200: #FABBD0
  --primary-100: #FEEBF1
  --secondary-500: #424242
  --secondary-400: #5C5C5C
  --secondary-300: #757575
  --secondary-200: #8F8F8F
  --secondary-100: #A8A8A8
  --gray-500: #17171c
  --gray-400: #303036
  --gray-300: #7A7A7A
  --gray-200: #D3D3D3
  --gray-100: #f2f2f2
  --font-titles: "Montserrat", sans-serif
  --font-content: "Inter", sans-serif
*
  box-sizing: border-box
  margin: 0
  padding: 0
html
  font-size: 62.5%
  color: var(--gray-100)
body
  background-color: var(--gray-500)
  content-font()
a
  text-decoration: none
  color: var(--primary-300)
.content
  content-font()
  &--xs
    font-size: 1.2rem
    line-height: 1.6rem
  &--sm
    font-size: 1.4rem
    line-height: 2rem
  &--md
    font-size: 1.6rem
    line-height: 2.4rem
  &--lg
    font-size: 1.8rem
    line-height: 2.8rem
  &--xl
    font-size: 2rem
    line-height: 2.8rem
.heading
  title-font()
  color: var(--gray-100)
  &--xs
    font-size: 2rem
    line-height: 2.8rem
  &--sm
    font-size: 2.4rem
    line-height: 3.2rem
  &--md
    font-size: 3rem
    line-height: 3.6rem
  &--lg
    font-size: 3.6rem
    line-height: 4rem
  &--xl
    font-size: 4.8rem
    line-height: 4.8rem
.button
  padding: .8rem 1.6rem
  font-weight: 500
  color: var(--gray-100)
  letter-spacing: 0.1em
  border: none
  border-radius: 4px
  box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.05)
  text-transform: uppercase
  background-color: var(--primary-400)
  @extend .content--sm
  &:focus
    outline: 2px solid var(--primary-400)
    outline-offset: 3px
  &:hover
    background-color: var(--primary-300)
  &--secondary
    background-color: var(--secondary-400)
    &:hover
      background-color: var(--secondary-500)
    &:focus
      outline: 2px solid var(--secondary-400)
      outline-offset: 3px
  &--subtle
    background-color: var(--gray-200)
    color: var(--gray-400)
    &:hover
      background-color: var(--gray-100)
    &:focus
      outline: 2px solid var(--gray-200)
      outline-offset: 3px

.main__section
  padding: 6.4rem 1.6rem
  display: flex
  flex-direction: column
  align-items: center
  gap: 16px
